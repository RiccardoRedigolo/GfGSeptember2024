#ifndef Calendar_hpp
#define Calendar_hpp

#include <iostream>
#include <fstream>
#include <string>
#include <vector>

class Calendar{
public:
  Calendar(std::string& hotel_name) : hotel_name(hotel_name) {
    std::string dir_name = "hotel_calendars";
    std::string reply = "n";
    int t =  system("cd hotel_calendars");
    if (t == 0) {
      std::cout << "The file will be saved inside the already existing \"hotel_calendars\" directory.\n";
    }

    else {
      std::cout << "To store the files generated by the programm, a directory named \"hotel_calendars\" will now be created.\n";
      std::cout << "Do you wish to store it in a different directory? [y/n]\n";
      std::cin >> reply;
      if (reply == "y"){
	std::cout << "Please insert the directory's name.\n";
	std::cin >> dir_name;
      }
      std::string create_dir = "mkdir "+dir_name;
      system(create_dir.c_str());
    }
    std::ofstream output_txt("./"+dir_name+"/"+hotel_name+"_booking_calendar.txt"); // We create the file or we overwrite it if already existing.
    if (!output_txt.is_open()) {
      std::cerr << "It was not possible to create the file. Please try again.";
    }
    output_txt << hotel_name << ": BOOKING CALENDAR\n \n";
    output_txt.close(); // We close the file for safety reasons.
  }

private:
  std::string hotel_name;
};




#endif
